{
  "name": "anime-download-gui",
  "version": "1.0.0",
  "description": "A nodejs/expressjs based app with vue frontend to download animes",
  "main": "dist/",
  "scripts": {
    "dev": "tsc --watch",

    "build:server": "tsc",
    "postbuild:server": "cp -rf server/client dist/",

    "prebuild": "./prebuild.sh",
    "build": "npm run build:server",

    "start": "pm2 start ecosystem.config.js",

    "restart": "pm2 restart exosystem.config.js",
    "stop": "pm2 stop dist",
    "monit": "pm2 monit",

		"logs": "pm2 logs",
		"logs:100": "pm2 logs --lines 100",

    "start:monit": "npm run start",
    "poststart:monit": "npm run monit",
    "restart:monit": "npm run restart",
    "postrestart:monit": "npm run monit",
		"pm2:init": "pm2 ecosystem"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/connect-history-api-fallback": "^1.3.3",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.11",
    "@types/morgan": "^1.9.2",
    "@types/node-cron": "^2.0.3",
    "@types/puppeteer": "^5.4.2",
    "@types/puppeteer-core": "^5.4.0",
    "cors": "^2.8.5",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "connect-history-api-fallback": "^1.6.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "morgan": "^1.10.0",
    "mpd-m3u8-to-json": "^0.1.3",
    "node-cron": "^2.0.3",
    "pm2": "^4.5.1",
    "puppeteer-core": "^5.5.0",
    "socket.io": "^3.1.0"
  }
}
